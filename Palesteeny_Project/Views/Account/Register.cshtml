@using Palesteeny_Project.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = null;

    string autofocusField = "FirstName";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <title>تسجيل حساب جديد</title>
    <link rel="stylesheet" href="~/css/loginpal.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <style>
        .login-box {
            background: rgba(255, 255, 255, 0.7);
            padding: 60px;
            border-radius: 25px;
            box-shadow: 0 0 50px rgba(0, 0, 0, 0.5), inset 0 0 30px rgba(0, 0, 0, 0.1);
            width: 900px;
            height: 500px;
            position: relative;
            z-index: 1;
            backdrop-filter: blur(5px);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .inner-content {
            transform: scale(0.9);
            transform-origin: top center;
        }

        /* الإضافات الخاصة برسائل الخطأ العائمة */
        .input-wrapper {
            position: relative;
            width: 100%;
            margin-bottom: 30px;
        }

        .floating-error {
            position: absolute;
            top: -25px;
            right: 10px;
            background-color: #f44336;
            color: white;
            padding: 4px 10px;
            font-size: 13px;
            border-radius: 8px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
            white-space: nowrap;
            z-index: 10;
            display: none;
        }

        .input-wrapper.has-error .floating-error {
            display: block;
        }

    </style>
</head>

<body>

    <div class="container">

        <!-- الزينة الحمراء -->
        <div class="decor">
            <img src="~/images/palesteeny RED dashed line up.svg" alt="زينة" class="decor-image" />
        </div>

        <!-- الزينة الزرقاء -->
        <div class="blue-decor">
            <img src="~/images/palesteeny RED dashed line down.svg" alt="زينة زرقاء" class="blue-decor-image" />
        </div>

        <!-- الزينة الخضراء -->
        <div class="green-decor">
            <img src="~/images/palesteeny GREEN dashed line down.svg" alt="زينة خضراء" class="green-decor-image" />
        </div>

        <!-- الزينة الصفراء -->
        <div class="yellow-decor">
            <img src="~/images/palesteeny GREEN dashed line up.svg" alt="زينة صفراء" class="yellow-decor-image" />
        </div>

        <!-- البوكس الأبيض -->
        <div class="login-box">
            <div class="inner-content">
                <h2>تسجيل حساب جديد</h2>
                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    @* الاسم الأول *@
                    @{
                        var firstNameAttrs = new Dictionary<string, object>
                    {
                    { "class", "input-box" },
                    { "placeholder", "اكتب اسمك الأول 😊" }
                    };
                        if (autofocusField == "FirstName")
                        {
                            firstNameAttrs.Add("autofocus", "autofocus");
                        }
                    }
                    <div class="input-wrapper @(ViewData.ModelState["FirstName"]?.Errors.Count > 0 ? "has-error" : "")">
                        <label>
                            <span asp-for="FirstName" class="label-bg">الاسم الأول:</span>
                            @Html.TextBoxFor(m => m.FirstName, firstNameAttrs)
                            <div class="floating-error">
                                @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                            </div>
                        </label>
                    </div>

                    @* الاسم الثاني *@
                    @{
                        var lastNameAttrs = new Dictionary<string, object>
                    {
                    { "class", "input-box" },
                    { "placeholder", "اكتب اسمك الثاني 😊" }
                    };
                        if (autofocusField == "LastName")
                        {
                            lastNameAttrs.Add("autofocus", "autofocus");
                        }
                    }
                    <div class="input-wrapper @(ViewData.ModelState["LastName"]?.Errors.Count > 0 ? "has-error" : "")">
                        <label>
                            <span asp-for="LastName" class="label-bg">الاسم الثاني:</span>
                            @Html.TextBoxFor(m => m.LastName, lastNameAttrs)
                            <div class="floating-error">
                                @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                            </div>
                        </label>
                    </div>

                    @* البريد الإلكتروني *@
                    @{
                        var emailAttrs = new Dictionary<string, object>
                    {
                    { "class", "input-box" },
                    { "placeholder", "اكتب بريدك الإلكتروني 📧" }
                    };
                        if (autofocusField == "Email")
                        {
                            emailAttrs.Add("autofocus", "autofocus");
                        }
                    }
                    <div class="input-wrapper @(ViewData.ModelState["Email"]?.Errors.Count > 0 ? "has-error" : "")">
                        <label>
                            <span asp-for="Email" class="label-bg">البريد الإلكتروني:</span>
                            @Html.TextBoxFor(m => m.Email, emailAttrs)
                            <div class="floating-error">
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </label>
                    </div>

                    @* الصف *@
                    @{
                        var gradeAttrs = new Dictionary<string, object>
                    {
                    { "class", "input-box" }
                    };
                    }
                    <div class="input-wrapper @(ViewData.ModelState["Grade"]?.Errors.Count > 0 ? "has-error" : "")">
                        <label>
                            <span asp-for="Grade" class="label-bg">الصف:</span>
                            <select asp-for="Grade" class="input-box">
                                <option value="3">صف ثالث</option>
                                <option value="4">صف رابع</option>
                                <option value="5">صف خامس</option>
                                <option value="6">صف سادس</option>
                            </select>
                            <div class="floating-error">
                                @Html.ValidationMessageFor(m => m.Grade, "", new { @class = "text-danger" })
                            </div>
                        </label>
                    </div>

                    @* الجنس *@
                    <div class="input-wrapper @(ViewData.ModelState["Gender"]?.Errors.Count > 0 ? "has-error" : "")">
                        <label>
                            <span asp-for="Gender" class="label-bg">الجنس:</span>
                            <select asp-for="Gender" class="input-box">
                                <option value="ذكر">ذكر</option>
                                <option value="أنثى">أنثى</option>
                            </select>
                            <div class="floating-error">
                                @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })
                            </div>
                        </label>
                    </div>

                    @* كلمة السر *@
                    @{
                        var passwordAttrs = new Dictionary<string, object>
                    {
                    { "class", "input-box" },
                    { "placeholder", "اكتب كلمة السر 🔒" },
                    { "type", "password" }
                    };
                        if (autofocusField == "Password")
                        {
                            passwordAttrs.Add("autofocus", "autofocus");
                        }
                    }
                    <div class="input-wrapper @(ViewData.ModelState["Password"]?.Errors.Count > 0 ? "has-error" : "")">
                        <label>
                            <span asp-for="Password" class="label-bg">كلمة السر:</span>
                            @Html.TextBoxFor(m => m.Password, passwordAttrs)
                            <div class="floating-error">
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </label>
                    </div>

                    @* تأكيد كلمة السر *@
                    @{
                        var confirmPasswordAttrs = new Dictionary<string, object>
                    {
                    { "class", "input-box" },
                    { "placeholder", "تأكيد كلمة السر 🔒" },
                    { "type", "password" }
                    };
                        if (autofocusField == "ConfirmPassword")
                        {
                            confirmPasswordAttrs.Add("autofocus", "autofocus");
                        }
                    }
                    <div class="input-wrapper @(ViewData.ModelState["ConfirmPassword"]?.Errors.Count > 0 ? "has-error" : "")">
                        <label>
                            <span asp-for="ConfirmPassword" class="label-bg">تأكيد كلمة السر:</span>
                            @Html.TextBoxFor(m => m.ConfirmPassword, confirmPasswordAttrs)
                            <div class="floating-error">
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                        </label>
                    </div>

                    <input type="submit" value="تسجيل!" />
                    <div class="signup">
                        <p>هل لديك حساب؟ <a asp-controller="Account" asp-action="Login">تسجيل دخول</a></p>
                    </div>
                </form>
            </div>
        </div>

        <!-- تينا -->
        <img src="~/images/teena waving.png" alt="شخصية" class="character" id="teena-img" />
    </div>

    <!-- سكربت تغيير الصورة -->
    <script>
        const passwordInput = document.querySelector('#Password');
        const confirmPasswordInput = document.querySelector('#ConfirmPassword');
        const teenaImg = document.getElementById('teena-img');

        passwordInput.addEventListener('focus', () => {
            teenaImg.src = "/images/teenapassword.png";
        });

        passwordInput.addEventListener('blur', () => {
            teenaImg.src = "/images/teena waving.png";
        });

        confirmPasswordInput.addEventListener('focus', () => {
            teenaImg.src = "/images/teenapassword.png";
        });

        confirmPasswordInput.addEventListener('blur', () => {
            teenaImg.src = "/images/teena waving.png";
        });
    </script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
        }
    }
</body>

</html>
