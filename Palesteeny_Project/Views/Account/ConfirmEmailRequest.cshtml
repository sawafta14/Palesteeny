@using Palesteeny_Project.ViewModels;
@model VerifyEmailViewModel;

@{
    ViewData["Title"] = "إعادة إرسال رابط تأكيد البريد الإلكتروني";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>إعادة إرسال رابط تأكيد البريد الإلكتروني</title>
    <link rel="stylesheet" href="~/css/loginpal.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
</head>
<body>

    <div class="container">

        <!-- الزينة الحمراء -->
        <div class="decor">
            <img src="~/images/palesteeny RED dashed line up.svg" alt="زينة" class="decor-image">
        </div>

        <!-- الزينة الزرقاء -->
        <div class="blue-decor">
            <img src="~/images/palesteeny RED dashed line down.svg" alt="زينة زرقاء" class="blue-decor-image">
        </div>

        <!-- الزينة الخضراء -->
        <div class="green-decor">
            <img src="~/images/palesteeny GREEN dashed line down.svg" alt="زينة خضراء" class="green-decor-image">
        </div>

        <!-- الزينة الصفراء -->
        <div class="yellow-decor">
            <img src="~/images/palesteeny GREEN dashed line up.svg" alt="زينة صفراء" class="yellow-decor-image">
        </div>

        <!-- البوكس الأبيض -->
        <div class="login-box">
            <h2>إعادة إرسال رابط تأكيد البريد الإلكتروني</h2>
            <form asp-action="ConfirmEmailRequest" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <label>
                    <span asp-for="Email" class="label-bg">البريد الإلكتروني:</span>
                    <input asp-for="Email" class="input-box" placeholder="اكتب بريدك الإلكتروني هنا 😊" autocomplete="username" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </label>

                <input type="submit" value="إرسال رابط التأكيد" />
            </form>
        </div>

        <!-- تينا -->
        <img src="~/images/teena waving.png" alt="شخصية" class="character" id="teena-img">

    </div>

    <!-- لا حاجة لسكربت تغيير الصورة لأنه لا يوجد input password -->
    <!-- التحقق من الصحة -->
    @section Scripts {
    await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
</body>
</html>
