@model Palesteeny_Project.Models.Qusi

@{
    ViewData["Title"] = "Delete";
    Layout = null;
      <!-- لاي أوت فارغ -->
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f7f9fc;
        color: #333;
        margin: 30px;
    }

    h1 {
        color: rgb(132, 232, 73); /* اللون المتفق عليه */
        font-weight: 700;
        margin-bottom: 20px;
        text-align: center;
        text-shadow: 1px 1px 1px #bbb;
    }

    h3 {
        color: rgb(132, 232, 73); /* اللون المتفق عليه */
        text-align: center;
        margin-bottom: 30px;
    }

    h4 {
        color: rgb(132, 232, 73);
        border-bottom: 2px solid rgb(132, 232, 73);
        padding-bottom: 6px;
        margin-bottom: 25px;
        text-align: center;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .btn {
        background-color: rgb(132, 232, 73);
        padding: 10px 20px;
        color: white;
        font-weight: 600;
        border: none;
        cursor: pointer;
        border-radius: 5px;
        transition: background-color 0.3s;
        display: inline-block;
    }

        .btn:hover {
            background-color: #97d44d;
        }

    .container {
        max-width: 800px;
        margin: 0 auto;
        background-color: white;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 0 15px rgb(132, 232, 73 / 0.3);
    }

    dl.row {
        max-width: 600px;
        margin: auto;
        background: white;
        padding: 20px 30px;
        border-radius: 8px;
        box-shadow: 0 0 20px rgb(132 232 73 / 0.3);
    }

    dt.col-sm-2 {
        font-weight: 700;
        color: rgb(132, 232, 73);
        float: right;
        width: 25%;
        padding: 8px 0;
        text-align: right;
    }

    dd.col-sm-10 {
        margin-right: 25%;
        padding: 8px 0;
        color: #444;
        word-wrap: break-word;
    }

    div > a {
        display: inline-block;
        margin-top: 15px;
        font-weight: 600;
        font-size: 1.1rem;
        color: rgb(132, 232, 73);
        text-decoration: none;
        transition: color 0.3s ease;
    }

        div > a:hover {
            color: #97d44d;
            text-decoration: underline;
        }
</style>

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <h3>Are you sure you want to delete this?</h3>

    <h4>Qusi</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CoverImage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CoverImage)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Link)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Link)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
