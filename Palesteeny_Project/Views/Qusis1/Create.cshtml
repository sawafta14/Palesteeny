@model Palesteeny_Project.Models.Qusi

@{
    ViewData["Title"] = "إضافة قصة";
    Layout = null;
}

<div class="wrapper">
    <div class="create-box">
        <h1>➕ إضافة قصة</h1>
        <p class="subtitle">معلومات االقصة</p>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

            <div class="form-group">
                <label asp-for="Title">عنوان القصة:</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Category">الفئة:</label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CoverImage">رابط صورة الغلاف:</label>
                <input asp-for="CoverImage" class="form-control" />
                <span asp-validation-for="CoverImage" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Link">رابط القصة:</label>
                <input asp-for="Link" class="form-control" />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="💾 إنشاء" class="btn btn-primary" />
            </div>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Index" class="btn btn-cancel">العودة إلى القائمة</a>
        </div>
    </div>
</div>

<style>
    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        background-color: #f0f2f5;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
        padding: 20px;
    }

    .create-box {
        background-color: #fff;
        padding: 40px;
        border-radius: 12px;
        max-width: 700px;
        width: 100%;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
    }

    h1 {
        font-size: 28px;
        color: rgb(132, 232, 73);
        text-align: center;
        margin-bottom: 10px;
    }

    .subtitle {
        font-size: 18px;
        text-align: center;
        color: #555;
        margin-bottom: 30px;
    }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            display: block;
            font-weight: 600;
            color: rgb(75, 160, 30);
            margin-bottom: 8px;
        }

    .form-control {
        font-size: 16px;
        padding: 10px;
        border-radius: 8px;
        border: 1px solid #ccc;
        width: 100%;
        box-sizing: border-box;
        transition: border-color 0.3s, box-shadow 0.3s;
    }

        .form-control:focus {
            border-color: rgb(132, 232, 73);
            box-shadow: 0 0 5px rgba(132, 232, 73, 0.4);
            outline: none;
        }

    .text-danger {
        color: #d9534f;
        font-size: 14px;
    }

    .btn {
        padding: 12px 30px;
        font-size: 16px;
        font-weight: 600;
        border-radius: 6px;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background-color: rgb(132, 232, 73);
        color: white;
        width: 100%;
    }

        .btn-primary:hover {
            background-color: rgb(105, 190, 60);
        }

    .btn-cancel {
        display: inline-block;
        margin-top: 10px;
        padding: 10px 20px;
        font-size: 16px;
        background-color: transparent;
        color: rgb(132, 232, 73);
        border: 2px solid rgb(132, 232, 73);
        border-radius: 6px;
        text-decoration: none;
    }

        .btn-cancel:hover {
            background-color: rgb(240, 255, 230);
            color: rgb(105, 190, 60);
            border-color: rgb(105, 190, 60);
        }

    
        .create-box

    {
        padding: 25px;
    }

    h1 {
        font-size: 22px;
    }

    .btn {
        width: 100%;
    }

    
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
