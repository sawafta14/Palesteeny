@model IEnumerable<Palesteeny_Project.Models.User>

@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f9fef6;
        color: #2f4f1f;
        direction: rtl;
        margin: 20px;
    }

    a.create-new {
        display: inline-block;
        background-color: rgb(132, 232, 73);
        color: #1a1a1a;
        font-weight: 700;
        padding: 10px 22px;
        border-radius: 10px;
        text-decoration: none;
        box-shadow: 0 4px 10px rgba(132, 232, 73, 0.5);
        transition: background-color 0.3s ease;
        user-select: none;
        margin-bottom: 20px;
    }

        a.create-new:hover {
            background-color: rgb(102, 182, 57);
            box-shadow: 0 6px 14px rgba(102, 182, 57, 0.7);
        }

    table {
        width: 100%;
        border-collapse: collapse;
        box-shadow: 0 0 15px rgba(132, 232, 73, 0.3);
        border-radius: 12px;
        overflow: hidden;
        background-color: white;
    }

    thead {
        background-color: rgb(132, 232, 73);
        color: #1a1a1a;
        font-weight: 700;
        font-size: 18px;
        text-align: center;
    }

        thead th {
            padding: 14px 10px;
        }

    tbody tr {
        border-bottom: 1px solid #d4e7b0;
    }

        tbody tr:nth-child(even) {
            background-color: #f0f9d9;
        }

    tbody td {
        padding: 12px 10px;
        text-align: center;
        font-size: 16px;
        color: #3a5e13;
    }

        tbody td:last-child {
            white-space: nowrap;
        }

    tbody a {
        color: rgb(66, 132, 15);
        font-weight: 600;
        margin: 0 6px;
        text-decoration: none;
        user-select: none;
        transition: color 0.25s ease;
    }

        tbody a:hover {
            color: rgb(102, 182, 57);
            text-decoration: underline;
        }
</style>

<a asp-action="Create" class="create-new">إضافة مستخدم جديد</a>

<table>
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.LastName)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Role)</th>
            <th>إجراءات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Role)</td>
                <td>
                   
                    <a asp-action="Details" asp-route-id="@item.Id">تفاصيل</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
