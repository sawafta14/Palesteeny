@model Palesteeny_Project.Models.User

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f9fef6;
        color: #2f4f1f;
        direction: rtl;
        margin: 30px 0;
        display: flex;
        justify-content: center;
    }

    .edit-container {
        background: white;
        border-radius: 12px;
        box-shadow: 0 5px 20px rgba(132, 232, 73, 0.3);
        width: 460px;
        padding: 30px 35px;
    }

    h4 {
        text-align: center;
        font-weight: 700;
        font-size: 26px;
        margin-bottom: 18px;
        color: rgb(84, 157, 35);
        letter-spacing: 1px;
    }

    hr {
        border: none;
        height: 3px;
        background-color: rgb(132, 232, 73);
        border-radius: 6px;
        width: 90px;
        margin: 12px auto 30px auto;
    }

    form {
        display: flex;
        flex-direction: column;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label.control-label {
        display: block;
        font-weight: 700;
        margin-bottom: 6px;
        color: rgb(65, 124, 17);
        user-select: none;
    }

    input.form-control {
        width: 100%;
        padding: 9px 12px;
        font-size: 15px;
        border: 2px solid rgb(132, 232, 73);
        border-radius: 8px;
        transition: border-color 0.3s ease;
        outline: none;
    }

        input.form-control:focus {
            border-color: rgb(102, 182, 57);
            box-shadow: 0 0 8px rgb(102, 182, 57);
        }

    .text-danger {
        font-size: 13px;
        margin-top: 3px;
        color: #d32f2f;
        font-weight: 600;
    }

    .form-check {
        display: flex;
        align-items: center;
        margin-bottom: 25px;
        font-weight: 700;
        color: rgb(65, 124, 17);
    }

    .form-check-input {
        margin-left: 10px;
        width: 18px;
        height: 18px;
        cursor: pointer;
    }

    .btn-primary {
        background-color: rgb(132, 232, 73);
        border: none;
        color: #1a1a1a;
        font-weight: 700;
        padding: 12px 0;
        border-radius: 10px;
        font-size: 17px;
        cursor: pointer;
        box-shadow: 0 5px 14px rgba(132, 232, 73, 0.6);
        transition: background-color 0.3s ease;
        user-select: none;
    }

        .btn-primary:hover {
            background-color: rgb(102, 182, 57);
            box-shadow: 0 6px 18px rgba(102, 182, 57, 0.8);
        }

    div.back-link {
        margin-top: 25px;
        text-align: center;
    }

        div.back-link a {
            color: rgb(132, 232, 73);
            font-weight: 700;
            text-decoration: none;
            user-select: none;
            font-size: 16px;
        }

            div.back-link a:hover {
                color: rgb(102, 182, 57);
                text-decoration: underline;
            }
</style>

<div class="edit-container">
    <h4>تعديل بيانات المستخدم</h4>
    <hr />
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="FirstName" class="control-label"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastName" class="control-label"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PasswordHash" class="control-label"></label>
            <input asp-for="PasswordHash" class="form-control" />
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>

        <div class="form-check">
            <input class="form-check-input" asp-for="EmailConfirmed" />
            <label class="form-check-label">@Html.DisplayNameFor(model => model.EmailConfirmed)</label>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmationToken" class="control-label"></label>
            <input asp-for="ConfirmationToken" class="form-control" />
            <span asp-validation-for="ConfirmationToken" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Role" class="control-label"></label>
            <input asp-for="Role" class="form-control" />
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="حفظ" class="btn btn-primary" />
        </div>
    </form>

    <div class="back-link">
        <a asp-action="Index">العودة للقائمة</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
