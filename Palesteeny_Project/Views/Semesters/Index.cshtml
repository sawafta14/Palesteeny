@model IEnumerable<Palesteeny_Project.Models.Semester>

@{
    ViewData["Title"] = "Index";
    Layout = null;
      <!-- لاي أوت فارغ -->
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f7f9fc;
        color: #333;
        margin: 30px;
    }

    h1 {
        color: rgb(132, 232, 73); /* اللون المتفق عليه */
        font-weight: 700;
        margin-bottom: 20px;
        text-align: center;
        text-shadow: 1px 1px 1px #bbb;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        background-color: white;
        box-shadow: 0 0 15px rgb(132 232 73 / 0.3);
        margin-top: 30px;
        border-radius: 8px;
    }

        .table th {
            background-color: rgb(132, 232, 73);
            color: white;
            text-align: left;
            padding: 12px;
        }

        .table td {
            padding: 12px;
            border-top: 1px solid #ddd;
        }

        .table tbody tr:nth-child(even) {
            background-color: #ecf0f1;
        }

        .table tbody tr:hover {
            background-color: #d1e7fd;
        }

    a {
        color: rgb(132, 232, 73);
        font-weight: 600;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        a:hover {
            color: #97d44d;
            text-decoration: underline;
        }

    p {
        text-align: center;
        margin-top: 30px;
    }

    .btn {
        background-color: rgb(132, 232, 73);
        padding: 10px 20px;
        color: white;
        font-weight: 600;
        border: none;
        cursor: pointer;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

        .btn:hover {
            background-color: #97d44d;
        }
</style>

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.GradeName)</th>
            <th>@Html.DisplayNameFor(model => model.SemesterName)</th>
            <th>@Html.DisplayNameFor(model => model.RegistrationDate)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.GradeName)</td>
                <td>@Html.DisplayFor(modelItem => item.SemesterName)</td>
                <td>@Html.DisplayFor(modelItem => item.RegistrationDate)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SemesterId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.SemesterId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.SemesterId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
