@model Palesteeny_Project.Models.HelpQuestion

@{
    ViewData["Title"] = "Delete";
    Layout = null; /* تعيين الصفحة كصفحة مستقلة */
}

@* إضافة تنسيق CSS احترافي *@
<style>
    body {
        background-color: #f4f7fa; /* خلفية فاتحة */
        color: #333; /* لون النص */
    }

    h1, h3, h4 {
        color: rgb(132, 232, 73); /* اللون المتفق عليه للعناوين */
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .btn-danger {
        background-color: #d9534f;
        border-color: #d9534f;
    }

        .btn-danger:hover {
            background-color: #c9302c;
            border-color: #c12e2a;
        }

    .control-label {
        font-weight: bold;
    }

    .text-danger {
        font-size: 0.875rem;
        color: red;
    }

    .back-link {
        text-decoration: none;
        color: rgb(132, 232, 73);
    }

        .back-link:hover {
            text-decoration: underline;
        }
</style>

<div class="container">
    <h1>Delete Help Question</h1>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Help Question</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Question)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Question)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Answer)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Answer)
            </dd>
        </dl>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="back-link" asp-action="Index">Back to List</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
