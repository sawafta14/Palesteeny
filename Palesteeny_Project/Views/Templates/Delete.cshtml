@model Palesteeny_Project.Models.Template

@{
    ViewData["Title"] = "Delete";
    Layout = null; // أو ضع لايآوت حسب مشروعك
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f7f9fc;
        color: #333;
        margin: 30px;
    }

    h1 {
        color: rgb(132, 232, 73);
        font-weight: 700;
        margin-bottom: 15px;
        text-align: center;
        text-shadow: 1px 1px 1px #bbb;
    }

    h3 {
        color: #555;
        margin-bottom: 25px;
        text-align: center;
    }

    h4 {
        color: rgb(132, 232, 73);
        margin-bottom: 10px;
        border-bottom: 2px solid rgb(132, 232, 73);
        padding-bottom: 5px;
        text-align: center;
    }

    .row {
        max-width: 480px;
        margin: auto;
        background: white;
        padding: 20px 30px;
        border-radius: 8px;
        box-shadow: 0 0 15px rgb(132 232 73 / 0.3);
    }

    dl.row {
        margin-bottom: 30px;
    }

    dt.col-sm-2 {
        font-weight: 700;
        color: rgb(132, 232, 73);
        float: right;
        width: 25%;
        padding: 5px 0;
    }

    dd.col-sm-10 {
        margin-right: 25%;
        padding: 5px 0;
        color: #444;
        word-wrap: break-word;
    }

    form {
        text-align: center;
    }

    input.btn-danger {
        background-color: #e74c3c;
        border: none;
        padding: 10px 25px;
        font-weight: 700;
        font-size: 1.1rem;
        border-radius: 6px;
        cursor: pointer;
        box-shadow: 0 4px 8px #e74c3c88;
        transition: background-color 0.3s ease;
        margin-right: 15px;
    }

        input.btn-danger:hover {
            background-color: #c0392b;
            box-shadow: 0 6px 12px #c0392bbb;
        }

    a {
        color: rgb(132, 232, 73);
        font-weight: 700;
        font-size: 1.1rem;
        text-decoration: none;
        vertical-align: middle;
        transition: color 0.3s ease;
    }

        a:hover {
            color: #97d44d;
            text-decoration: underline;
        }
</style>

<h1>@ViewData["Title"]</h1>

<h3>هل أنت متأكد أنك تريد الحذف؟</h3>

<div class="row">
    <h4>Template</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Category)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Category)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ImageUrl)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ImageUrl)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="حذف" class="btn btn-danger" />
        |
        <a asp-action="Index">العودة للقائمة</a>
    </form>
</div>
