@model Palesteeny_Project.Models.Template

@{
    ViewData["Title"] = "Edit";
    Layout = null; // عدل حسب الحاجة
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f7f9fc;
        color: #333;
        margin: 30px;
    }

    h1 {
        color: rgb(132, 232, 73);
        font-weight: 700;
        margin-bottom: 25px;
        text-align: center;
        text-shadow: 1px 1px 1px #bbb;
    }

    h4 {
        color: rgb(132, 232, 73);
        border-bottom: 2px solid rgb(132, 232, 73);
        padding-bottom: 8px;
        margin-bottom: 20px;
        text-align: center;
    }

    .row {
        display: flex;
        justify-content: center;
    }

    .col-md-4 {
        background: white;
        padding: 30px 25px;
        border-radius: 10px;
        box-shadow: 0 0 20px rgb(132 232 73 / 0.3);
        width: 100%;
        max-width: 450px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label.control-label {
        font-weight: 600;
        color: rgb(132, 232, 73);
        display: block;
        margin-bottom: 8px;
    }

    input.form-control {
        width: 100%;
        padding: 8px 12px;
        border: 1.5px solid #ccc;
        border-radius: 5px;
        font-size: 1rem;
        transition: border-color 0.3s ease;
    }

        input.form-control:focus {
            border-color: rgb(132, 232, 73);
            outline: none;
            box-shadow: 0 0 5px rgb(132, 232, 73);
        }

    span.text-danger {
        font-size: 0.875rem;
        margin-top: 4px;
        display: block;
    }

    input[type="submit"].btn-primary {
        background-color: rgb(132, 232, 73);
        border-color: rgb(132, 232, 73);
        color: #fff;
        font-weight: 700;
        padding: 10px 20px;
        border-radius: 8px;
        cursor: pointer;
        width: 100%;
        transition: background-color 0.3s ease;
    }

        input[type="submit"].btn-primary:hover {
            background-color: #a1ef99;
            border-color: #a1ef99;
            color: #222;
        }

    div > a {
        display: inline-block;
        margin-top: 20px;
        color: rgb(132, 232, 73);
        font-weight: 600;
        text-decoration: none;
        text-align: center;
        width: 100%;
        max-width: 450px;
    }

        div > a:hover {
            text-decoration: underline;
            color: #97d44d;
        }
</style>

<h1>@ViewData["Title"]</h1>

<h4>Template</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label"></label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="حفظ" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">العودة للقائمة</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
