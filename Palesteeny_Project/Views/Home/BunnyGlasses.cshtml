        <div class="actions">
            <button class="add-button"><a asp-controller="Home" asp-action="Qisas">قراءة قصة جديدة</a></button>
            <button id="addToLibraryBtn" class="add-button">
                <span>إضافة إلى مكتبتي</span>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                     stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                     class="heart-icon">
                    <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z">
                    </path>
                </svg>
            </button>
        </div>
    </div>

    <script>
        const slides = document.querySelectorAll('.story-slide');
        const nextBtn = document.querySelector('.next-btn');
        const prevBtn = document.querySelector('.prev-btn');
        let currentSlide = 0;

        function showSlide(index) {
            slides.forEach(slide => slide.classList.remove('active'));
            slides[index].classList.add('active');
        }

        nextBtn.addEventListener('click', () => {
            currentSlide = (currentSlide + 1) % slides.length;
            showSlide(currentSlide);
        });

        prevBtn.addEventListener('click', () => {
            currentSlide = (currentSlide - 1 + slides.length) % slides.length;
            showSlide(currentSlide);
        });
    </script>

    <div id="toast" class="toast">
        <div class="toast-content"></div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const addToLibraryBtn = document.getElementById('addToLibraryBtn');
            const toast = document.getElementById('toast');

            // ✅ تعريف القصة مرة واحدة لتكون متاحة لجميع الدوال
            const story = {
                id: '3',
                title: 'ما هذه النظارة يا ارنوب؟',
                coverImage: 'images/bunnyslide1.webp',
                category: 'حيوانات',
                link: "!ما هذه النظارة يا أرنوب؟.html"
            };

            // ✅ عند تحميل الصفحة: تحقق من وجود القصة في المكتبة
            checkIfStoryAdded();

            // ✅ عند الضغط على الزر
            addToLibraryBtn.addEventListener('click', function () {
                let savedStories = JSON.parse(localStorage.getItem('myLibraryStories') || '[]');
                const storyExists = savedStories.some(s => s.id === story.id);

                if (!storyExists) {
                    savedStories.push(story);
                    localStorage.setItem('myLibraryStories', JSON.stringify(savedStories));
                    updateButton(true);
                    showToast('تمت إضافة القصة إلى مكتبتك');
                } else {
                    savedStories = savedStories.filter(s => s.id !== story.id);
                    localStorage.setItem('myLibraryStories', JSON.stringify(savedStories));
                    updateButton(false);
                    showToast('تم حذف القصة من مكتبتك');
                }
            });

            // ✅ تحديث حالة الزر حسب وجود القصة
            function checkIfStoryAdded() {
                const savedStories = JSON.parse(localStorage.getItem('myLibraryStories') || '[]');
                const storyExists = savedStories.some(s => s.id === story.id);
                updateButton(storyExists);
            }

            // ✅ تحديث الزر واللون
            function updateButton(isAdded) {
                if (isAdded) {
                    addToLibraryBtn.querySelector('span').textContent = 'حذف من المكتبة';
                    document.querySelector('.heart-icon').setAttribute('fill', 'red');
                } else {
                    addToLibraryBtn.querySelector('span').textContent = 'إضافة إلى مكتبتي';
                    document.querySelector('.heart-icon').setAttribute('fill', 'none');
                }
            }

            // ✅ عرض رسالة توست
            function showToast(message) {
                toast.querySelector('.toast-content').textContent = message;
                toast.classList.add('show');
                setTimeout(() => {
                    toast.classList.remove('show');
                }, 3000);
            }
        });
    </script>

</body>

</html>