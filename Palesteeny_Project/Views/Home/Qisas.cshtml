    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let currentContainer = 1; // 1 تعني أن الحاوية الأولى ظاهرة، 2 تعني الثانية

            const container1 = document.querySelector(".stories_container");
            const container2 = document.querySelector(".stories_container2");
            const prevBtn = document.getElementById("prev");
            const nextBtn = document.getElementById("next");

            // إخفاء الحاوية الثانية عند بدء الصفحة
            container2.style.display = "none";

            function showContainer(containerNumber) {
                if (containerNumber === 1) {
                    container1.style.display = "grid";
                    container2.style.display = "none";
                } else {
                    container1.style.display = "none";
                    container2.style.display = "grid";
                }
            }

            nextBtn.addEventListener("click", function () {
                if (currentContainer === 1) {
                    currentContainer = 2;
                } else {
                    currentContainer = 1;
                }
                showContainer(currentContainer);
            });

            prevBtn.addEventListener("click", function () {
                if (currentContainer === 2) {
                    currentContainer = 1;
                } else {
                    currentContainer = 2;
                }
                showContainer(currentContainer);
            });
        });

    </script>

