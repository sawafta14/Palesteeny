@model IEnumerable<Palesteeny_Project.Models.StoryBookmark>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.User)</th>
            <th>@Html.DisplayNameFor(model => model.Qusi)</th>
            <th>@Html.DisplayNameFor(model => model.LastImageIndex)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(item.User != null ? item.User.Email : "لا يوجد مستخدم")</td>
                <td>@(item.Qusi != null ? item.Qusi.Title : "لا يوجد قسمي")</td>
                <td>@Html.DisplayFor(modelItem => item.LastImageIndex)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
