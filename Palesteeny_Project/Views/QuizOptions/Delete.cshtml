@model Palesteeny_Project.Models.QuizOption

@{
    ViewData["Title"] = "Delete";
    Layout = null; /* Standalone page */
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
    }

    h1 {
        color: rgb(132, 232, 73); /* Primary color */
        font-size: 2rem;
        margin-bottom: 30px;
    }

    h4 {
        font-size: 1.5rem;
        color: rgb(113, 202, 63);
    }

    .container {
        max-width: 900px;
        margin: 50px auto;
        padding: 20px;
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            font-weight: bold;
            color: #333;
        }

    .form-control {
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ddd;
        width: 100%;
        font-size: 1rem;
    }

    .btn-danger {
        background-color: rgb(255, 99, 71);
        border-color: rgb(255, 99, 71);
        color: white;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 5px;
        font-size: 1rem;
        width: 100%;
    }

        .btn-danger:hover {
            background-color: rgb(255, 69, 0);
            border-color: rgb(255, 69, 0);
        }

    a {
        color: rgb(132, 232, 73);
        text-decoration: none;
        font-weight: bold;
    }

        a:hover {
            color: rgb(113, 202, 63);
        }

    dt {
        font-weight: bold;
        color: #333;
    }

    dd {
        padding-left: 20px;
    }
</style>

<div class="container">
    <h1>Delete Quiz Option</h1>
    <h4>Are you sure you want to delete this?</h4>

    <div>
        <h4>QuizOption Details</h4>
        <hr />
        <dl class="row">
            <!-- Option Text -->
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OptionText)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OptionText)
            </dd>

            <!-- Is Correct -->
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsCorrect)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsCorrect)
            </dd>

            <!-- Associated Quiz Question -->
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.QuizQuestion)
            </dt>
            <dd class="col-sm-10">
                @(Model.QuizQuestion != null ? Model.QuizQuestion.Id.ToString() : "غير متوفر")
            </dd>

        </dl>
    </div>

    <!-- Delete Confirmation Form -->
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
    </form>

    <!-- Navigation Back to List -->
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
