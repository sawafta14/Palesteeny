@model IEnumerable<Palesteeny_Project.Models.QuizOption>

@{
    ViewData["Title"] = "Quiz Options";
    Layout = null; /* If this is a standalone page */
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
    }

    h1 {
        color: rgb(132, 232, 73); /* Primary color */
        font-size: 2rem;
        margin-bottom: 30px;
        text-align: center;
    }

    h4 {
        font-size: 1.5rem;
        color: rgb(113, 202, 63);
    }

    .container {
        max-width: 1100px;
        margin: 50px auto;
        padding: 20px;
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .table {
        width: 100%;
        margin-bottom: 30px;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 12px;
            text-align: left;
            border: 1px solid #ddd;
        }

        .table th {
            background-color: rgb(132, 232, 73);
            color: white;
            font-weight: bold;
        }

        .table tbody tr:hover {
            background-color: #f9f9f9;
        }

        .table td a {
            color: rgb(113, 202, 63);
            text-decoration: none;
        }

            .table td a:hover {
                color: rgb(132, 232, 73);
                text-decoration: underline;
            }

    .btn-primary {
        background-color: rgb(132, 232, 73); /* Primary color */
        border: none;
        padding: 10px 15px;
        border-radius: 5px;
        font-size: 1rem;
    }

        .btn-primary:hover {
            background-color: rgb(113, 202, 63);
        }
</style>

<div class="container">
    <h1>Quiz Options</h1>
    <p>
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.OptionText)</th>
                <th>@Html.DisplayNameFor(model => model.IsCorrect)</th>
                <th>@Html.DisplayNameFor(model => model.QuizQuestion)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.OptionText)</td>
                    <td>@Html.DisplayFor(modelItem => item.IsCorrect)</td>
                    <td>
                        @(item.QuizQuestion?.Id.ToString() ?? "No Question Available")
                    </td>


                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
