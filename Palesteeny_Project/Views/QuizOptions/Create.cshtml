@model Palesteeny_Project.Models.QuizOption

@{
    ViewData["Title"] = "Create";
    Layout = null; /* Standalone page, remove layout */
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
    }

    h1 {
        color: rgb(132, 232, 73); /* Primary color */
    }

    h4 {
        font-size: 1.3rem;
        color: rgb(113, 202, 63);
    }

    .container {
        max-width: 900px;
        margin: 50px auto;
        padding: 20px;
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            font-weight: bold;
            color: #333;
        }

    .form-control {
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ddd;
        width: 100%;
        font-size: 1rem;
    }

    .form-check-label {
        font-weight: normal;
    }

    .btn-primary {
        background-color: rgb(132, 232, 73);
        border-color: rgb(132, 232, 73);
        color: white;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 5px;
        font-size: 1rem;
        width: 100%;
    }

        .btn-primary:hover {
            background-color: rgb(113, 202, 63);
            border-color: rgb(113, 202, 63);
        }

    a {
        color: rgb(132, 232, 73);
        text-decoration: none;
        font-weight: bold;
    }

        a:hover {
            color: rgb(113, 202, 63);
        }
</style>

<div class="container">
    <h1>Create Quiz Option</h1>

    <h4>Enter details for the new quiz option</h4>
    <hr />

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Option Text -->
        <div class="form-group">
            <label asp-for="OptionText" class="control-label"></label>
            <input asp-for="OptionText" class="form-control" />
            <span asp-validation-for="OptionText" class="text-danger"></span>
        </div>

        <!-- Correct Option -->
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="IsCorrect" /> @Html.DisplayNameFor(model => model.IsCorrect)
            </label>
        </div>

        <!-- Quiz Question Dropdown -->
        <div class="form-group">
            <label asp-for="QuizQuestionId" class="control-label"></label>
            <select asp-for="QuizQuestionId" class="form-control" asp-items="ViewBag.QuizQuestionId"></select>
        </div>

        <!-- Submit Button -->
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
