@model IEnumerable<Palesteeny_Project.Models.UserLesson>

@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<style>
    h1 {
        color: #2c3e50;
        font-weight: bold;
        margin-bottom: 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    table.table {
        width: 100%;
        border-collapse: collapse;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f9f9f9;
    }

        table.table thead tr {
            background-color: #2980b9;
            color: white;
            text-align: left;
        }

        table.table th, table.table td {
            padding: 10px 15px;
            border: 1px solid #ddd;
            vertical-align: middle;
        }

        table.table tbody tr:nth-child(even) {
            background-color: #ecf0f1;
        }

        table.table tbody tr:hover {
            background-color: #d1e7fd;
        }

    a {
        color: #2980b9;
        text-decoration: none;
        font-weight: 600;
    }

        a:hover {
            text-decoration: underline;
            color: #1c5980;
        }

        a.delete-link {
            color: #e74c3c;
            font-weight: 700;
        }

            a.delete-link:hover {
                color: #c0392b;
                text-decoration: underline;
            }
</style>

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().UserPal)</th>
            <th>@Html.DisplayNameFor(model => model.First().Lesson)</th>
            <th>@Html.DisplayNameFor(model => model.First().IsCompleted)</th>
            <th>@Html.DisplayNameFor(model => model.First().StartTime)</th>
            <th>@Html.DisplayNameFor(model => model.First().EndTime)</th>
            <th>@Html.DisplayNameFor(model => model.First().BookmarkPage)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(item.UserPal != null ? item.UserPal.Email : "لا توجد بيانات")</td>
                <td>@(item.Lesson != null ? item.Lesson.LessonId.ToString() : "لا توجد بيانات")</td>
                <td>@(item.IsCompleted ? "نعم" : "لا")</td>
                <td>@(item.StartTime.HasValue ? item.StartTime.Value.ToString("yyyy-MM-dd HH:mm") : "لا توجد بيانات")</td>
                <td>@(item.EndTime.HasValue ? item.EndTime.Value.ToString("yyyy-MM-dd HH:mm") : "لا توجد بيانات")</td>
                <td>@(item.BookmarkPage.HasValue ? item.BookmarkPage.Value.ToString() : "لا توجد بيانات")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">تفاصيل</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="delete-link">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
