@model Palesteeny_Project.Models.UserLesson

@{
    ViewData["Title"] = "Delete";
    Layout = null;  // تأكد من مسار الـ Layout عندك
}

@section Styles {
    <style>
        h1, h3, h4 {
            color: rgb(132, 232, 73);
            text-align: center;
            margin-bottom: 15px;
        }

        dl.row {
            max-width: 700px;
            margin: 20px auto 40px;
            background: #f9fff0;
            border: 2px solid rgb(132, 232, 73);
            border-radius: 10px;
            padding: 25px 30px;
            font-size: 1.1rem;
            color: #222;
        }

        dt.col-sm-2 {
            font-weight: bold;
            color: rgb(80, 180, 50);
            padding-top: 12px;
        }

        dd.col-sm-10 {
            margin-bottom: 20px;
            padding-top: 12px;
        }

        form {
            text-align: center;
            margin-bottom: 30px;
        }

        .btn-danger {
            background-color: rgb(132, 232, 73);
            border: 2px solid rgb(132, 232, 73);
            color: black;
            font-weight: 700;
            padding: 12px 35px;
            border-radius: 6px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-right: 12px;
        }

            .btn-danger:hover {
                background-color: #a6d93a;
                border-color: #a6d93a;
                color: black;
            }

        a {
            color: rgb(132, 232, 73);
            font-weight: 700;
            text-decoration: none;
            padding: 12px 35px;
            border: 2px solid rgb(132, 232, 73);
            border-radius: 6px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            a:hover {
                background-color: rgb(132, 232, 73);
                color: black;
                text-decoration: none;
            }
    </style>
}

<h1>Delete</h1>
<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>UserLesson</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.UserPal)</dt>
        <dd class="col-sm-10">
            @(Model.UserPal != null ? Model.UserPal.Email : "غير متوفر")
        </dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Lesson)</dt>
        <dd class="col-sm-10">
            @(Model.Lesson != null ? Model.Lesson.LessonId.ToString() : "غير متوفر")
        </dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IsCompleted)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.IsCompleted)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.StartTime)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.StartTime)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.EndTime)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.EndTime)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.BookmarkPage)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.BookmarkPage)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
