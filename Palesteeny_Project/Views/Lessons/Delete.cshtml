@model Palesteeny_Project.Models.Lesson

@{
    ViewData["Title"] = "Delete";
    Layout = null; /* تحديد الصفحة كصفحة مستقلة */
}

@* إضافة تنسيق CSS احترافي *@
<style>
    body {
        background-color: #f4f7fa; /* خلفية فاتحة */
        color: #333; /* لون النص */
    }

    h1, h3, h4 {
        color: rgb(132, 232, 73); /* اللون المتفق عليه للعناوين */
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-control {
        border-radius: 5px;
        border: 1px solid #ddd;
        box-shadow: none;
    }

    .btn-danger {
        background-color: rgb(232, 73, 73);
        border-color: rgb(232, 73, 73);
    }

        .btn-danger:hover {
            background-color: rgb(188, 50, 50);
            border-color: rgb(188, 50, 50);
        }

    .control-label {
        font-weight: bold;
    }

    .text-danger {
        font-size: 0.875rem;
        color: red;
    }

    .back-link {
        text-decoration: none;
        color: rgb(132, 232, 73);
    }

        .back-link:hover {
            text-decoration: underline;
        }
</style>

<div class="container">
    <h1>Delete Lesson</h1>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Lesson Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LessonName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LessonName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StartPage)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StartPage)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.VideoUrl)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.VideoUrl)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Book)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Book.BookId)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="LessonId" />
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </form>

        <div>
            <a class="back-link" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
