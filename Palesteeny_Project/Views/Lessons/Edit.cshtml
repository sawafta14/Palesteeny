@model Palesteeny_Project.Models.Lesson

@{
    ViewData["Title"] = "Edit";
    Layout = null; /* تحديد الصفحة كصفحة مستقلة */
}

@* إضافة تنسيق CSS احترافي *@
<style>
    body {
        background-color: #f4f7fa; /* خلفية فاتحة */
        color: #333; /* لون النص */
    }

    h1, h3, h4 {
        color: rgb(132, 232, 73); /* اللون المتفق عليه للعناوين */
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .btn-primary {
        background-color: rgb(132, 232, 73);
        border-color: rgb(132, 232, 73);
    }

        .btn-primary:hover {
            background-color: rgb(100, 200, 50);
            border-color: rgb(100, 200, 50);
        }

    .control-label {
        font-weight: bold;
    }

    .back-link {
        text-decoration: none;
        color: rgb(132, 232, 73);
    }

        .back-link:hover {
            text-decoration: underline;
        }
</style>

<div class="container">
    <h1>Edit Lesson</h1>
    <h4>Edit Lesson Information</h4>
    <hr />
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="LessonId" />

        <div class="form-group">
            <label asp-for="LessonName" class="control-label"></label>
            <input asp-for="LessonName" class="form-control" />
            <span asp-validation-for="LessonName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="StartPage" class="control-label"></label>
            <input asp-for="StartPage" class="form-control" />
            <span asp-validation-for="StartPage" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="VideoUrl" class="control-label"></label>
            <input asp-for="VideoUrl" class="form-control" />
            <span asp-validation-for="VideoUrl" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BookId" class="control-label"></label>
            <select asp-for="BookId" class="form-control" asp-items="ViewBag.BookId"></select>
            <span asp-validation-for="BookId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>

    <div class="form-group">
        <a class="back-link" asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
