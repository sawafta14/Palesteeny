@model Palesteeny_Project.Models.Lesson

@{
    ViewData["Title"] = "Details";
    Layout = null; /* تحديد الصفحة كصفحة مستقلة */
}

@* إضافة تنسيق CSS احترافي *@
<style>
    body {
        background-color: #f4f7fa; /* خلفية فاتحة */
        color: #333; /* لون النص */
    }

    h1, h3, h4 {
        color: rgb(132, 232, 73); /* اللون المتفق عليه للعناوين */
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .btn-primary {
        background-color: rgb(132, 232, 73);
        border-color: rgb(132, 232, 73);
    }

        .btn-primary:hover {
            background-color: rgb(100, 200, 50);
            border-color: rgb(100, 200, 50);
        }

    .control-label {
        font-weight: bold;
    }

    .back-link {
        text-decoration: none;
        color: rgb(132, 232, 73);
    }

        .back-link:hover {
            text-decoration: underline;
        }
</style>

<div class="container">
    <h1>Lesson Details</h1>
    <h4>Lesson Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LessonName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LessonName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartPage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartPage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VideoUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VideoUrl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book)
        </dt>
        <dd class="col-sm-10">
            @(Model.Book != null ? Model.Book.BookId.ToString() : "غير متوفر")
        </dd>

    </dl>

    <div class="form-group">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.LessonId">Edit</a> |
        <a class="back-link" asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
