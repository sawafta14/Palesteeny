@model Palesteeny_Project.Models.Book

@{
    ViewData["Title"] = "Details";
    Layout = null;
}

<div class="container-fluid d-flex justify-content-center align-items-center">
    <div class="col-md-8 col-lg-6">
        <div class="details-form">
            <h2 class="form-title">تفاصيل الكتاب</h2>
            <hr />
            <div class="dl-container">
                <dl class="row">
                    <dt class="col-4">العنوان:</dt>
                    <dd class="col-8">@Html.DisplayFor(model => model.Title)</dd>

                    <dt class="col-4">رابط الـ PDF:</dt>
                    <dd class="col-8">@Html.DisplayFor(model => model.PdfUrl)</dd>

                    <dt class="col-4">عدد الدروس:</dt>
                    <dd class="col-8">@Html.DisplayFor(model => model.NumberOfLessons)</dd>

                    <dt class="col-4">الفصل الدراسي:</dt>
                    <dd class="col-8">
                        @Html.DisplayFor(model => model.Semester == null ? "غير متوفر" : model.Semester.SemesterId.ToString())



                    </dd>
                </dl>
            </div>

            <div class="text-center">
                <a asp-action="Edit" asp-route-id="@Model?.BookId" class="btn btn-primary">تعديل</a>
                <a asp-action="Index" class="btn btn-link">العودة إلى القائمة</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background-color: #f4f7f6;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
        min-height: 100vh;
    }

    .container-fluid {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    .details-form {
        background-color: #fff;
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0px 4px 15px rgba(132, 232, 73, 0.2);
        width: 100%;
        max-width: 800px;
    }

    .form-title {
        text-align: center;
        font-size: 28px;
        font-weight: 700;
        color: rgb(132, 232, 73);
        margin-bottom: 30px;
    }

    .dl-container {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        border: 1px solid #d1d1d1;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    dt {
        font-weight: 600;
        color: rgb(75, 160, 30);
        font-size: 16px;
    }

    dd {
        color: #444;
        font-size: 16px;
        margin-bottom: 15px;
    }

    .btn {
        font-size: 16px;
        padding: 12px 25px;
        font-weight: 600;
        border-radius: 6px;
        margin: 10px;
        width: 100%;
    }

    .btn-primary {
        background-color: rgb(132, 232, 73);
        border-color: rgb(132, 232, 73);
        color: #fff;
        transition: background-color 0.3s;
    }

        .btn-primary:hover {
            background-color: rgb(100, 190, 50);
            border-color: rgb(100, 190, 50);
        }

    .btn-link {
        font-size: 16px;
        color: rgb(132, 232, 73);
        text-decoration: none;
        transition: color 0.3s;
    }

        .btn-link:hover {
            text-decoration: underline;
            color: rgb(100, 190, 50);
        }

    /* Responsive Design */
    .details-form {
        padding: 20px;
    }

    h1 {
        font-size: 26px;
    }

    h4 {
        font-size: 18px;
    }

    .dl-container {
        padding: 15px;
    }

    .btn {
        width: 100%;
        margin-bottom: 10px;
    }
</style>
