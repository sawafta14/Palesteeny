@model Palesteeny_Project.Models.Book

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}

<div class="container-fluid d-flex justify-content-center align-items-center">
    <div class="col-md-8 col-lg-6">
        <div class="edit-form">
            <h2 class="form-title">تعديل الكتاب</h2>
            <hr />

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="BookId" />

                <!-- Title Field -->
                <div class="form-group">
                    <label asp-for="Title" class="control-label">العنوان</label>
                    <input asp-for="Title" class="form-control" placeholder="أدخل العنوان" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <!-- PDF URL Field -->
                <div class="form-group">
                    <label asp-for="PdfUrl" class="control-label">رابط PDF</label>
                    <input asp-for="PdfUrl" class="form-control" placeholder="أدخل رابط PDF" />
                    <span asp-validation-for="PdfUrl" class="text-danger"></span>
                </div>

                <!-- Number of Lessons Field -->
                <div class="form-group">
                    <label asp-for="NumberOfLessons" class="control-label">عدد الدروس</label>
                    <input asp-for="NumberOfLessons" class="form-control" placeholder="أدخل عدد الدروس" />
                    <span asp-validation-for="NumberOfLessons" class="text-danger"></span>
                </div>

                <!-- Semester Field -->
                <div class="form-group">
                    <label asp-for="SemesterId" class="control-label">الفصل الدراسي</label>
                    <select asp-for="SemesterId" class="form-control" asp-items="ViewBag.SemesterId">
                        <option value="">اختر الفصل الدراسي</option>
                    </select>
                    <span asp-validation-for="SemesterId" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="form-group text-center">
                    <input type="submit" value="حفظ التعديلات" class="btn btn-primary" />
                </div>
            </form>

            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-link">العودة إلى القائمة</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background-color: #f4f7f6;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
        min-height: 100vh;
    }

    .container-fluid {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    .edit-form {
        background-color: #fff;
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0px 4px 15px rgba(132, 232, 73, 0.2);
        width: 100%;
        max-width: 800px;
    }

    .form-title {
        text-align: center;
        font-size: 28px;
        font-weight: 700;
        color: rgb(132, 232, 73);
        margin-bottom: 30px;
    }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            font-weight: 600;
            color: rgb(75, 160, 30);
            font-size: 16px;
        }

    .form-control {
        border: 1px solid #d1d1d1;
        border-radius: 8px;
        padding: 12px;
        font-size: 16px;
        width: 100%;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: rgb(132, 232, 73);
            outline: none;
            box-shadow: 0 0 5px rgba(132, 232, 73, 0.3);
        }

    .form-group .text-danger {
        font-size: 14px;
    }

    .btn {
        font-weight: 600;
        padding: 12px 20px;
        font-size: 16px;
        border-radius: 6px;
        transition: all 0.3s ease;
        width: 100%;
    }

    .btn-primary {
        background-color: rgb(132, 232, 73);
        border-color: rgb(132, 232, 73);
        color: #fff;
    }

        .btn-primary:hover {
            background-color: rgb(100, 190, 50);
            border-color: rgb(100, 190, 50);
        }

    .btn-link {
        font-size: 16px;
        color: rgb(132, 232, 73);
        text-decoration: none;
        font-weight: 600;
    }

        .btn-link:hover {
            text-decoration: underline;
            color: rgb(100, 190, 50);
        }
</style>
