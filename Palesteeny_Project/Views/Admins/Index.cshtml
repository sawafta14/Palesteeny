@model IEnumerable<Palesteeny_Project.Models.Admin>

@{
    ViewData["Title"] = "Index";
    Layout = null;
}
<head>
    <style>
        body {
            background-color: #f4f7f6;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            min-height: 100vh;
        }

        .container {
            padding: 40px;
            background-color: #fff;
            margin-top: 50px;
            box-shadow: 0 4px 15px rgba(132, 232, 73, 0.2);
            border-radius: 10px;
        }

        h1 {
            font-size: 32px;
            color: rgb(132, 232, 73);
            margin-bottom: 30px;
        }

        hr {
            border: 1px solid rgb(132, 232, 73);
        }

        .table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
        }

            .table th, .table td {
                padding: 12px;
                text-align: center;
                border: 1px solid #ddd;
                font-size: 16px;
            }

            .table th {
                background-color: rgb(132, 232, 73);
                color: white;
                font-weight: bold;
            }

        .table-striped tbody tr:nth-child(odd) {
            background-color: #f9f9f9;
        }

        .table td a {
            margin: 0 5px;
        }

        .btn {
            font-size: 14px;
            padding: 5px 15px;
            font-weight: 600;
            border-radius: 6px;
            margin: 5px;
            text-decoration: none;
        }

        .btn-success {
            background-color: rgb(132, 232, 73);
            border-color: rgb(132, 232, 73);
            color: white;
        }

            .btn-success:hover {
                background-color: rgb(100, 190, 50);
                border-color: rgb(100, 190, 50);
            }

        .btn-warning {
            background-color: #ffc107;
            border-color: #ffc107;
            color: white;
        }

            .btn-warning:hover {
                background-color: #e0a800;
                border-color: #e0a800;
            }

        .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
            color: white;
        }

            .btn-info:hover {
                background-color: #138496;
                border-color: #138496;
            }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
            color: white;
        }

            .btn-danger:hover {
                background-color: #c82333;
                border-color: #c82333;
            }

        .table-responsive {
            max-height: 400px;
            overflow-y: auto;
        }


        .table th, .table td {
            font-size: 14px;
            padding: 8px;
        }

        h1 {
            font-size: 26px;
        }

        .btn {
            font-size: 12px;
            padding: 5px 12px;
        }

    </style>
</head>
<div class="container">
    <div class="text-center">
        <h1>قائمة المشرفين</h1>
        <hr />
        <p>
            <a asp-action="Create" class="btn btn-success">إنشاء مشرف جديد</a>
        </p>
    </div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.FirstName)</th>
                    <th>@Html.DisplayNameFor(model => model.LastName)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.EmailConfirmed)</th>
                    <th>@Html.DisplayNameFor(model => model.Role)</th>
                    <th>العمليات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                        <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.EmailConfirmed)</td>
                        <td>@Html.DisplayFor(modelItem => item.Role)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">تعديل</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">تفاصيل</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">حذف</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


  

