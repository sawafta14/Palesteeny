@model IEnumerable<Palesteeny_Project.Models.Drawing>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.User)</th>
            <th>@Html.DisplayNameFor(model => model.ImageUrl)</th>
            <th>@Html.DisplayNameFor(model => model.Mode)</th>
            <th>@Html.DisplayNameFor(model => model.Template)</th>
            <th>@Html.DisplayNameFor(model => model.BrushType)</th>
            <th>@Html.DisplayNameFor(model => model.Color)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.User != null)
                    {
                        @item.User.Email
                    }
                    else
                    {
                        <em>لا يوجد مستخدم</em>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImageUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mode)
                </td>
                <td>
                    @if (item.Template != null)
                    {
                        @item.Template.Id
                    }
                    else
                    {
                        <em>لا يوجد قالب</em>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BrushType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DrawingId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.DrawingId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.DrawingId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
