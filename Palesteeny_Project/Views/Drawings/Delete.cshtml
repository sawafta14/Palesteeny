@model Palesteeny_Project.Models.Drawing

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Drawing</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @if (Model.User != null)
            {
                @Model.User.Email
            }
            else
            {
                <em>لا يوجد مستخدم</em>
            }
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageUrl)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mode)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Template)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Template != null)
            {
                @Model.Template.Id
            }
            else
            {
                <em>لا يوجد قالب</em>
            }
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BrushType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BrushType)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="DrawingId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
