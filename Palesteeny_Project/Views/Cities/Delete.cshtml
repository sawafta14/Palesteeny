@model Palesteeny_Project.Models.City

@{
    ViewData["Title"] = "حذف مدينة";
    Layout = null;
}

<div class="delete-container">
    <div class="delete-box">
        <h1>🗑️ حذف مدينة</h1>
        <p class="confirm-text">هل أنت متأكد أنك تريد حذف هذه المدينة؟</p>

        <dl class="info-list">
            <dt>الاسم:</dt>
            <dd>@Html.DisplayFor(model => model.Name)</dd>

            <dt>معنى الاسم:</dt>
            <dd>@Html.DisplayFor(model => model.NameMeaning)</dd>

            <dt>التاريخ:</dt>
            <dd>@Html.DisplayFor(model => model.History)</dd>

            <dt>المناخ:</dt>
            <dd>@Html.DisplayFor(model => model.Climate)</dd>

            <dt>الأطعمة:</dt>
            <dd>@Html.DisplayFor(model => model.Food)</dd>

            <dt>📷 صورة معنى الاسم:</dt>
            <dd>@Html.DisplayFor(model => model.ImageNameMeaning)</dd>

            <dt>📷 صورة التاريخ:</dt>
            <dd>@Html.DisplayFor(model => model.ImageHistory)</dd>

            <dt>📷 صورة المناخ:</dt>
            <dd>@Html.DisplayFor(model => model.ImageClimate)</dd>

            <dt>📷 صورة الطعام:</dt>
            <dd>@Html.DisplayFor(model => model.ImageFood)</dd>
        </dl>

        <form asp-action="Delete" class="form-actions">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">نعم، احذف</button>
            <a asp-action="Index" class="btn btn-cancel">إلغاء</a>
        </form>
    </div>
</div>

<style>
    body {
        margin: 0;
        padding: 0;
        background-color: #f0f2f5;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    .delete-container {
        width: 100%;
        padding: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .delete-box {
        background-color: #fff;
        padding: 40px;
        border-radius: 12px;
        max-width: 750px;
        width: 100%;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
        text-align: center;
    }

    h1 {
        font-size: 28px;
        color: rgb(132, 232, 73);
        margin-bottom: 10px;
    }

    .confirm-text {
        font-size: 18px;
        color: #444;
        margin-bottom: 30px;
    }

    .info-list {
        text-align: right;
        margin-bottom: 30px;
    }

        .info-list dt {
            font-weight: bold;
            color: #4ca52c;
            margin-top: 10px;
        }

        .info-list dd {
            margin-bottom: 10px;
            color: #555;
            font-size: 16px;
        }

    .form-actions {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 15px;
    }

    .btn {
        padding: 12px 30px;
        font-size: 16px;
        font-weight: 600;
        border-radius: 6px;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-danger {
        background-color: rgb(132, 232, 73);
        color: white;
    }

        .btn-danger:hover {
            background-color: rgb(105, 190, 60);
        }

    .btn-cancel {
        background-color: transparent;
        color: rgb(132, 232, 73);
        border: 2px solid rgb(132, 232, 73);
    }

        .btn-cancel:hover {
            background-color: rgb(240, 255, 230);
            color: rgb(105, 190, 60);
            border-color: rgb(105, 190, 60);
        }

    
        .delete-box

    {
        padding: 25px;
    }

    h1 {
        font-size: 22px;
    }

    .confirm-text {
        font-size: 16px;
    }

    .btn {
        width: 100%;
    }

    
</style>
