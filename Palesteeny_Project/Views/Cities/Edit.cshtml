@model Palesteeny_Project.Models.City

@{
    ViewData["Title"] = "تعديل المدينة";
    Layout = null;
}

<div class="wrapper">
    <div class="edit-box">
        <br />
        <br /><br />
        <br />
         <br />
        <br /><br />
        <br />
        <br />
        <br /><br />
        <br /> <br />
        <br /><br />
        <br />
        <h1>✏️ تعديل المدينة</h1>
        <p class="subtitle">معلومات المدينة</p>

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name">اسم المدينة:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NameMeaning">معنى اسم المدينة:</label>
                <input asp-for="NameMeaning" class="form-control" />
                <span asp-validation-for="NameMeaning" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="History">التاريخ:</label>
                <input asp-for="History" class="form-control" />
                <span asp-validation-for="History" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Climate">المناخ:</label>
                <input asp-for="Climate" class="form-control" />
                <span asp-validation-for="Climate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Food">الأطعمة:</label>
                <input asp-for="Food" class="form-control" />
                <span asp-validation-for="Food" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageNameMeaning">صورة معنى الاسم:</label>
                <input asp-for="ImageNameMeaning" class="form-control" />
                <span asp-validation-for="ImageNameMeaning" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageHistory">صورة التاريخ:</label>
                <input asp-for="ImageHistory" class="form-control" />
                <span asp-validation-for="ImageHistory" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageClimate">صورة المناخ:</label>
                <input asp-for="ImageClimate" class="form-control" />
                <span asp-validation-for="ImageClimate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageFood">صورة الأطعمة:</label>
                <input asp-for="ImageFood" class="form-control" />
                <span asp-validation-for="ImageFood" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="💾 حفظ التعديلات" class="btn btn-primary" />
            </div>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Index" class="btn btn-cancel">العودة إلى القائمة</a>
        </div>
    </div>
</div>

<style>
    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        background-color: #f0f2f5;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
        padding: 20px;
    }

    .edit-box {
        background-color: #fff;
        padding: 40px;
        border-radius: 12px;
        max-width: 750px;
        width: 100%;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
    }

    h1 {
        font-size: 28px;
        color: rgb(132, 232, 73);
        text-align: center;
        margin-bottom: 10px;
    }

    .subtitle {
        font-size: 18px;
        text-align: center;
        color: #555;
        margin-bottom: 30px;
    }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            display: block;
            font-weight: 600;
            color: rgb(75, 160, 30);
            margin-bottom: 8px;
        }

    .form-control {
        font-size: 16px;
        padding: 10px;
        border-radius: 8px;
        border: 1px solid #ccc;
        width: 100%;
        box-sizing: border-box;
        transition: border-color 0.3s, box-shadow 0.3s;
    }

        .form-control:focus {
            border-color: rgb(132, 232, 73);
            box-shadow: 0 0 5px rgba(132, 232, 73, 0.4);
            outline: none;
        }

    .text-danger {
        color: #d9534f;
        font-size: 14px;
    }

    .btn {
        padding: 12px 30px;
        font-size: 16px;
        font-weight: 600;
        border-radius: 6px;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background-color: rgb(132, 232, 73);
        color: white;
        width: 100%;
    }

        .btn-primary:hover {
            background-color: rgb(105, 190, 60);
        }

    .btn-cancel {
        display: inline-block;
        margin-top: 10px;
        padding: 10px 20px;
        font-size: 16px;
        background-color: transparent;
        color: rgb(132, 232, 73);
        border: 2px solid rgb(132, 232, 73);
        border-radius: 6px;
        text-decoration: none;
    }

        .btn-cancel:hover {
            background-color: rgb(240, 255, 230);
            color: rgb(105, 190, 60);
            border-color: rgb(105, 190, 60);
        }

   
        .edit-box

    {
        padding: 25px;
    }

    h1 {
        font-size: 22px;
    }

    .btn {
        width: 100%;
    }

    
</style>
