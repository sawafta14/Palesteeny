@model Palesteeny_Project.Models.UserPal

@{
    ViewData["Title"] = "Delete";
    Layout = null;
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #fff5f5;
        color: #4a4a4a;
        direction: rtl;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .delete-container {
        background: white;
        border-radius: 14px;
        box-shadow: 0 6px 18px rgba(255, 99, 71, 0.25);
        width: 500px;
        padding: 35px;
        border: 1px solid #e0e0e0;
    }

    h1 {
        text-align: center;
        font-weight: 800;
        font-size: 32px;
        color: #c53030; /* أحمر قاتم */
        margin-bottom: 8px;
        user-select: none;
    }

    h3 {
        text-align: center;
        font-weight: 600;
        font-size: 20px;
        color: #b02a2a;
        margin-bottom: 25px;
        user-select: none;
    }

    h4 {
        font-weight: 700;
        font-size: 22px;
        color: #7f1d1d;
        margin-bottom: 10px;
        user-select: none;
        border-bottom: 3px solid #f87171;
        padding-bottom: 5px;
    }

    dl.row {
        margin-bottom: 30px;
    }

    dl dt {
        font-weight: 700;
        color: #a02a2a;
        width: 120px;
        float: right;
        margin-right: 15px;
        user-select: none;
    }

    dl dd {
        margin-left: 140px;
        margin-bottom: 12px;
        color: #4a4a4a;
        word-break: break-word;
    }

    form {
        text-align: center;
        margin-top: 25px;
    }

    .btn-danger {
        background-color: #e53e3e;
        border: none;
        color: white;
        font-weight: 700;
        padding: 12px 40px;
        border-radius: 8px;
        font-size: 17px;
        cursor: pointer;
        box-shadow: 0 5px 12px rgba(229, 62, 62, 0.7);
        transition: all 0.3s ease;
        user-select: none;
    }

        .btn-danger:hover {
            background-color: #9b2c2c;
            box-shadow: 0 6px 16px rgba(155, 44, 44, 0.9);
        }

    a {
        display: inline-block;
        margin-left: 15px;
        font-weight: 600;
        color: #c53030;
        text-decoration: none;
        font-size: 16px;
        user-select: none;
    }

        a:hover {
            text-decoration: underline;
            color: #7f1d1d;
        }

</style>

<div class="delete-container">
    <h1>حذف</h1>
    <h3>هل أنت متأكد من حذف هذا السجل؟</h3>

    <h4>بيانات المستخدم</h4>
    <hr />
    <dl class="row">
        <dt>@Html.DisplayNameFor(model => model.Gender)</dt>
        <dd>@Html.DisplayFor(model => model.Gender)</dd>

        <dt>@Html.DisplayNameFor(model => model.Age)</dt>
        <dd>@Html.DisplayFor(model => model.Age)</dd>

        <dt>@Html.DisplayNameFor(model => model.ImagePath)</dt>
        <dd>@Html.DisplayFor(model => model.ImagePath)</dd>

        <dt>@Html.DisplayNameFor(model => model.Semester)</dt>
        <dd class="col-sm-10">
            @(Model.Semester != null ? Model.Semester.SemesterId.ToString() : "لا يوجد فصل دراسي")
        </dd>


        <dt>@Html.DisplayNameFor(model => model.FirstName)</dt>
        <dd>@Html.DisplayFor(model => model.FirstName)</dd>

        <dt>@Html.DisplayNameFor(model => model.LastName)</dt>
        <dd>@Html.DisplayFor(model => model.LastName)</dd>

        <dt>@Html.DisplayNameFor(model => model.Email)</dt>
        <dd>@Html.DisplayFor(model => model.Email)</dd>

        <dt>@Html.DisplayNameFor(model => model.PasswordHash)</dt>
        <dd>@Html.DisplayFor(model => model.PasswordHash)</dd>

        <dt>@Html.DisplayNameFor(model => model.EmailConfirmed)</dt>
        <dd>@Html.DisplayFor(model => model.EmailConfirmed)</dd>

        <dt>@Html.DisplayNameFor(model => model.ConfirmationToken)</dt>
        <dd>@Html.DisplayFor(model => model.ConfirmationToken)</dd>

        <dt>@Html.DisplayNameFor(model => model.Role)</dt>
        <dd>@Html.DisplayFor(model => model.Role)</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="حذف" class="btn btn-danger" />
        <a asp-action="Index">العودة للقائمة</a>
    </form>
</div>
