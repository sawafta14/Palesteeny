@model Palesteeny_Project.Models.QusiImage

@{
    ViewData["Title"] = "Delete";
    Layout = null;
      <!-- لاي أوت فارغ -->
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f7f9fc;
        color: #333;
        margin: 30px;
    }

    h1 {
        color: rgb(132, 232, 73); /* اللون المتفق عليه */
        font-weight: 700;
        margin-bottom: 20px;
        text-align: center;
        text-shadow: 1px 1px 1px #bbb;
    }

    h3 {
        color: rgb(132, 232, 73); /* اللون المتفق عليه */
        text-align: center;
        margin-bottom: 20px;
    }

    h4 {
        color: rgb(132, 232, 73); /* اللون المتفق عليه */
        border-bottom: 2px solid rgb(132, 232, 73);
        padding-bottom: 6px;
        margin-bottom: 25px;
        text-align: center;
    }

    dl.row {
        max-width: 600px;
        margin: auto;
        background: white;
        padding: 20px 30px;
        border-radius: 8px;
        box-shadow: 0 0 20px rgb(132 232 73 / 0.3);
    }

    dt.col-sm-2 {
        font-weight: 700;
        color: rgb(132, 232, 73);
        float: right;
        width: 25%;
        padding: 8px 0;
        text-align: right;
    }

    dd.col-sm-10 {
        margin-right: 25%;
        padding: 8px 0;
        color: #444;
        word-wrap: break-word;
    }

    .btn-danger {
        background-color: rgb(132, 232, 73); /* اللون المتفق عليه */
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        font-weight: 600;
        cursor: pointer;
    }

        .btn-danger:hover {
            background-color: #97d44d;
        }

    .btn-link {
        color: rgb(132, 232, 73); /* اللون المتفق عليه */
        font-weight: 600;
        text-decoration: none;
    }

        .btn-link:hover {
            text-decoration: underline;
        }
</style>

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>QusiImage</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ImageUrl)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ImageUrl)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Order)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Order)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Qusi)</dt>
        <dd class="col-sm-10">
            @Model.Qusi?.Title ?? "No Title Available"
        </dd>

    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn-link">Back to List</a>
    </form>
</div>
