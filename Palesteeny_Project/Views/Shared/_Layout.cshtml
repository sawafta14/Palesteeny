<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Palesteeny_Project</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Palesteeny_Project.styles.css" asp-append-version="true" />
    <link href="@Url.Content("~/fonts/DG-3asomy-Regular.ttf")" rel="stylesheet">
    <link rel="stylesheet" href="~/css/navbar.css" />
    <link rel="stylesheet" href="~/css/footer.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body>
    <header>
        <div class="main-container">
            <div class="nav-container">
                <a asp-controller="Home" asp-action="Hesabi" class="profile-pic-container">
                    <img src="@Url.Content("~/images/profileDef.png")" alt="Profile" class="profile-pic" />
                </a>

                <div class="input-wrapper">
                    <input type="text" placeholder="ابحث عن ما تريده" />
                    <i class="fa fa-search input-icon"></i>
                </div>

                <nav class="nav-links">
                    <a asp-controller="PalMap" asp-action="PalMap">خريطتي</a>
                    <div class="logo-container">
                        <img src="@Url.Content("~/images/Palesteeny-logo 5.png")" alt="Logo" class="logo" />
                    </div>
                    <a asp-controller="Home" asp-action="Tasali">تسالي</a>
                    <a asp-controller="Home" asp-action="Qisas">قصص</a>
                    <a asp-controller="Books" asp-action="Index">كتابي</a>
                    <a asp-controller="Home" asp-action="about">من نحن</a>
                </nav>
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
