@model IEnumerable<Palesteeny_Project.Models.Ad>

@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<div class="container-fluid d-flex justify-content-center align-items-center">
    <div class="col-md-8 col-lg-6">
        <div class="text-center">
            <h2 class="form-title">قائمة الإعلانات</h2>
            <hr />
            <p>
                <a asp-action="Create" class="btn btn-success">إنشاء إعلان جديد</a>
            </p>
        </div>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Title)</th>
                        <th>@Html.DisplayNameFor(model => model.ImageUrl)</th>
                        <th>@Html.DisplayNameFor(model => model.Link)</th>
                        <th>@Html.DisplayNameFor(model => model.IsActive)</th>
                        <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                        <th>العمليات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Title)</td>
                            <td>@Html.DisplayFor(modelItem => item.ImageUrl)</td>
                            <td>@Html.DisplayFor(modelItem => item.Link)</td>
                            <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                            <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">تعديل</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">تفاصيل</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">حذف</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


    <style>
        body {
            background-color: #f4f7f6;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            min-height: 100vh;
        }

        .container-fluid {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .form-title {
            text-align: center;
            font-size: 28px;
            font-weight: 700;
            color: rgb(132, 232, 73);
            margin-bottom: 30px;
        }

        .table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
        }

            .table th, .table td {
                padding: 12px;
                text-align: center;
                border: 1px solid #ddd;
                font-size: 16px;
            }

            .table th {
                background-color: rgb(132, 232, 73);
                color: white;
                font-weight: bold;
            }

        .table-striped tbody tr:nth-child(odd) {
            background-color: #f9f9f9;
        }

        .btn {
            font-size: 14px;
            padding: 5px 15px;
            font-weight: 600;
            border-radius: 6px;
            margin: 5px;
            text-decoration: none;
        }

        .btn-success {
            background-color: rgb(132, 232, 73);
            border-color: rgb(132, 232, 73);
            color: white;
        }

            .btn-success:hover {
                background-color: rgb(100, 190, 50);
                border-color: rgb(100, 190, 50);
            }

        .btn-warning {
            background-color: #ffc107;
            border-color: #ffc107;
            color: white;
        }

            .btn-warning:hover {
                background-color: #e0a800;
                border-color: #e0a800;
            }

        .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
            color: white;
        }

            .btn-info:hover {
                background-color: #138496;
                border-color: #138496;
            }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
            color: white;
        }

            .btn-danger:hover {
                background-color: #c82333;
                border-color: #c82333;
            }

        .table-responsive {
            max-height: 400px;
            overflow-y: auto;
        }

        .table th, .table td {
            font-size: 14px;
            padding: 8px;
        }
    </style>

