@model Palesteeny_Project.Models.Ad

@{
    Layout = null;
    ViewData["Title"] = "Create";
}

<div class="container-fluid d-flex justify-content-center align-items-center">
    <div class="col-md-8 col-lg-6">
        <form asp-action="Create" class="form-container">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <h2 class="form-title">إضافة إعلان جديد</h2>

            <!-- Title Field -->
            <div class="form-group">
                <label asp-for="Title" class="control-label">العنوان</label>
                <input asp-for="Title" class="form-control" placeholder="أدخل العنوان" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Image URL Field -->
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label">رابط الصورة</label>
                <input asp-for="ImageUrl" class="form-control" placeholder="أدخل رابط الصورة" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <!-- Link Field -->
            <div class="form-group">
                <label asp-for="Link" class="control-label">الرابط</label>
                <input asp-for="Link" class="form-control" placeholder="أدخل الرابط" />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>

            <!-- Active Checkbox -->
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>

            <!-- CreatedAt Field -->
            <div class="form-group">
                <label asp-for="CreatedAt" class="control-label">تاريخ الإنشاء</label>
                <input asp-for="CreatedAt" class="form-control" />
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group text-center">
                <input type="submit" value="إضافة" class="btn btn-success" />
            </div>
        </form>

        <!-- Back to List Button -->
        <div class="text-center mt-3">
            <a asp-action="Index" class="btn btn-link">العودة إلى القائمة</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background-color: #f4f7f6;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
        margin: 0;
        padding: 0;
        min-height: 100vh;
    }

    .container-fluid {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    .form-container {
        background-color: #fff;
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
        text-align: right;
        width: 100%;
    }

    .form-title {
        text-align: center;
        font-size: 28px;
        font-weight: 700;
        color: rgb(132, 232, 73);
        margin-bottom: 30px;
    }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            font-weight: 600;
            color: rgb(75, 160, 30);
            font-size: 16px;
        }

    .form-control {
        border: 1px solid #d1d1d1;
        border-radius: 8px;
        padding: 12px;
        font-size: 16px;
        width: 100%;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: rgb(132, 232, 73);
            outline: none;
            box-shadow: 0 0 5px rgba(132, 232, 73, 0.3);
        }

    .form-group .text-danger {
        font-size: 14px;
    }

    .btn {
        font-weight: 600;
        padding: 12px 20px;
        font-size: 16px;
        border-radius: 6px;
        transition: all 0.3s ease;
        width: 100%;
    }

    .btn-success {
        background-color: rgb(132, 232, 73);
        color: #fff;
        border: none;
    }

        .btn-success:hover {
            background-color: rgb(100, 190, 50);
        }

    .btn-link {
        font-size: 16px;
        color: rgb(132, 232, 73);
        text-decoration: none;
        font-weight: 600;
    }

        .btn-link:hover {
            text-decoration: underline;
            color: rgb(100, 190, 50);
        }

    .form-check-label {
        font-weight: 500;
    }

    .form-check-input {
        margin-right: 10px;
    }
</style>
